@model LibraryMVC.ViewModels.HomeViewModel

@{
    ViewBag.Title = "Home Page";
}

@section AddToHead{
    <img src="~/Content/images/background.jpg" alt="Sample Photo" width="1583" height="650"/>
}

<h2>Latest News</h2> <br />

<table class="table">
   
    @foreach (var item in Model.News)
    {
        <tr>
            <th>
                @Html.DisplayName("Title")
            </th>
        </tr>
        <tr>
            <td>
                @item.Text
            </td>
        </tr>
    }

</table>

<br /><h2>Recently added books</h2> <br />

<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Title")
        </th>
        <th>
            @Html.DisplayName("Author")
        </th>
        <th>
            @Html.DisplayName("ISBN")
        </th>
        <th>
            @Html.DisplayName("Category")
        </th>
    </tr>

    @foreach (var item in Model.Books)
    {
        <tr>
            <td>
                @item.Title
            </td>
            <td>
                @item.Author
            </td>
            <td>
                @item.ISBN
            </td>
            <td>
                @item.Category.Name
            </td>
        </tr>
    }

</table>