@model IEnumerable<LibraryMVC.ViewModels.IndexCategory>

@{
    ViewBag.Title = "Index";
}

<h2>Categories</h2>
<br />
<p>
    @Html.ActionLink("Create New", "Create")
</p><br />
<table class="table">
    <tr>
