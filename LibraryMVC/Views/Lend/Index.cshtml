@model IEnumerable<LibraryMVC.Models.Lend>

@{
    ViewBag.Title = "Index";
}

<h2>Lends</h2><br />

<p>
    @Html.ActionLink("Create New", "Create")
</p><br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DateBorrowed)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateReturn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State)
        </th>
